<!DOCTYPE html>
<html>
<head>
    <title>Add Person</title>
    <link rel="stylesheet" type="text/css" href="/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a routerlink="/" class="navbar-brand">MyContacts</a>
            </div>
            <div>
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <a href="@Url.Action("MyContacts", "MyContacts")" class="nav-link">Contacts</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("AddUser", "AddUser")" class="nav-link active">Add</a>
                </li>
                <li class="nav-item">
                    <a href="/" class="nav-link">Logout</a>
                </li>
            </ul>
            </div>
        </nav>
    </header>
    <main class="form-signin w-100 m-auto">
        <h1 class="mb-3 fw-normal">Add new contact</h1>
        <form action="/AddUser/AddNewUser" class="form w-150 m-auto" method="post">
        <!-- Name -->
            <div class="form-floating mb-3">
                <input type="text" id="name" class="form-control" name="Name" placeholder="placeholder">
                <label for="name" class="form-label">Name:</label>
            </div>

            <!-- Invoice Address -->
            <div class="form-floating">
                <input type="text" id="addressLine1" class="form-control" name="addressLine1" placeholder="placeholder">
                <label for="addressLine1" class="form-label">Address line 1:</label>
            </div>

            <div class="form-floating">
                <input type="text" id="addressLine2" class="form-control" name="addressLine2" placeholder="placeholder">
                <label for="addressLine2" class="form-label">Address line 2:</label>
            </div>

            <div class="form-floating">
                <input type="text" id="addressLine3" class="form-control" name="addressLine3" placeholder="placeholder">
                <label for="addressLine3" class="form-label">Address line 3:</label>
            </div>

            <div class="form-floating">
                <input type="text" id="city" class="form-control" name="city" placeholder="placeholder">
                <label for="city" class="form-label">City:</label>
            </div>

            <div class="form-floating">
                <input type="text" id="countrycode" class="form-control" name="countrycode" placeholder="placeholder">
                <label for="countrycode" class="form-label">Country code:</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" id="postalcode" class="form-control" name="postalcode" placeholder="placeholder">
                <label for="postalcode" class="form-label">Postal code:</label>
            </div>

            <!-- Phone -->
            <div class="form-floating">
                <input type="text" id="countrycode" class="form-control" name="countrycode" placeholder="placeholder">
                <label for="countrycode" class="form-label">Phone country code:</label>
            </div>

            <div class="form-floating">
                <input type="text" id="type" class="form-control" name="type" placeholder="placeholder">
                <label for="type" class="form-label">Type:</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" id="mobilenumber" class="form-control" name="mobilenumber" placeholder="placeholder">
                <label for="mobilenumber" class="form-label">Phone number:</label>
            </div>

            <!-- Default Email -->
            <div class="form-floating mb-3">
                <input type="email" id="emailAddress" class="form-control" name="emailAddress" placeholder="placeholder">
                <label for="emailAddress" class="form-label">Email Address:</label>
            </div>

            <!-- Comment -->
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">Comments</label>
            </div>

        <!-- Submit Button -->
            <button class="btn btn-primary w-50 py-2" type="submit">Add Contact</button>
        </form>

    </main>
</body>
</html>
