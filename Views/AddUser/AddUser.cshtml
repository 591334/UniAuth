<!DOCTYPE html>
<html>
<head>
    <title>Add Person</title>
</head>
<body>
    <h1>Add Person</h1>
    <form action="/AddUserController/AddNewUser" method="post">
        <!-- Name -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" required><br><br>

        <!-- Invoice Address -->
        <label for="addressLine1">Address Line 1:</label>
        <input type="text" id="addressLine1" name="InvoiceAddress.AddressLine1" required><br>
        <label for="addressLine2">Address Line 2:</label>
        <input type="text" id="addressLine2" name="InvoiceAddress.AddressLine2"><br>
        <label for="addressLine3">Address Line 3:</label>
        <input type="text" id="addressLine3" name="InvoiceAddress.AddressLine3"><br>
        <label for="city">City:</label>
        <input type="text" id="city" name="InvoiceAddress.City" required><br>
        <label for="country">Country:</label>
        <input type="text" id="country" name="InvoiceAddress.Country" required><br>
        <label for="countryCode">Country Code:</label>
        <input type="text" id="countryCode" name="InvoiceAddress.CountryCode" required><br>
        <label for="postalCode">Postal Code:</label>
        <input type="text" id="postalCode" name="InvoiceAddress.PostalCode" required><br><br>

        <!-- Default Phone -->
        <label for="phoneCountryCode">Phone Country Code:</label>
        <input type="text" id="phoneCountryCode" name="DefaultPhone.CountryCode" required><br>
        <label for="phoneDescription">Phone Description:</label>
        <input type="text" id="phoneDescription" name="DefaultPhone.Description" required><br>
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="DefaultPhone.Number" required><br><br>

        <!-- Default Email -->
        <label for="emailAddress">Email Address:</label>
        <input type="email" id="emailAddress" name="DefaultEmail.EmailAddress" required><br><br>

        <!-- Comment -->
        <label for="comment">Comment:</label><br>
        <textarea id="comment" name="Comment" rows="4" cols="50"></textarea><br><br>

        <!-- Submit Button -->
        <input type="submit" value="Add Person">
    </form>
</body>
</html>
